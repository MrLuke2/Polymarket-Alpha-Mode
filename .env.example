# ============================================
# POLYMARKET GOD MODE - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ============================================

# === API KEYS ===
# OpenAI (for agent reasoning - optional, uses rule-based fallback if missing)
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic (alternative LLM provider)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Polymarket API Credentials
POLYMARKET_API_KEY=your-polymarket-api-key
POLYMARKET_API_SECRET=your-polymarket-api-secret

# === WALLET CONFIGURATION ===
# WARNING: Only use a dedicated trading wallet with limited funds!
# NEVER use your main wallet or store large amounts here
WALLET_PRIVATE_KEY=0x_your_private_key_here
WALLET_ADDRESS=0x_your_wallet_address_here

# === OPTIONAL: CACHING ===
# Redis URL for distributed caching (optional)
REDIS_URL=redis://localhost:6379

# === ENVIRONMENT ===
# development, staging, or production
ENVIRONMENT=development
DEBUG=true
